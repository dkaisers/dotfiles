{
    "title": "doka keymappings",
    "rules": [
        {
            "description": "Change caps_lock to hyper",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "caps_lock",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_command",
                            "modifiers": [
                                "left_control",
                                "left_option"
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "description": "Change Hyper + IJKL to Arrow Keys",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "i",
                        "modifiers": {
                            "mandatory": ["left_command", "left_control", "left_option"],
                            "optional": ["any"]
                        }
                    },
                    "to": [{"key_code": "up_arrow"}]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "j",
                        "modifiers": {
                            "mandatory": ["left_command", "left_control", "left_option"],
                            "optional": ["any"]
                        }
                    },
                    "to": [{"key_code": "left_arrow"}]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "k",
                        "modifiers": {
                            "mandatory": ["left_command", "left_control", "left_option"],
                            "optional": ["any"]
                        }
                    },
                    "to": [{"key_code": "down_arrow"}]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "l",
                        "modifiers": {
                            "mandatory": ["left_command", "left_control", "left_option"],
                            "optional": ["any"]
                        }
                    },
                    "to": [{"key_code": "right_arrow"}]
                }
            ]
        },
        {
            "description": "Add Umlaute with Left_Option + AOU",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "a",
                        "modifiers": {
                            "mandatory": ["left_option"],
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {"key_code": "u", "modifiers": ["left_option"]},
                        {"key_code": "a"}
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "o",
                        "modifiers": {
                            "mandatory": ["left_option"],
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {"key_code": "u", "modifiers": ["left_option"]},
                        {"key_code": "o"}
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "u",
                        "modifiers": {
                            "mandatory": ["left_option"],
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {"key_code": "u", "modifiers": ["left_option"]},
                        {"key_code": "u"}
                    ]
                }
            ]
        }
    ]
}
